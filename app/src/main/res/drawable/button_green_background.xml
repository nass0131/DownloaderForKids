<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF"> <!-- 터치 시 은은한 물결 -->
    <item>
        <shape android:shape="rectangle">
            <!-- 대각선 그라데이션 (약간의 투명도 추가) -->
            <gradient
                android:startColor="@color/modern_green_start"
                android:endColor="@color/modern_green_end"
                android:angle="45" />

            <!-- 둥근 모서리 (완전한 타원형) -->
            <corners android:radius="40dp" />
        </shape>
    </item>
</ripple>